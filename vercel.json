{
  "version": 2,
  "builds": [
    {
      "src": "src/app.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/check-notifications",
      "dest": "src/app.ts",
      "methods": ["POST"]
    },
    {
      "src": "/api/health",
      "dest": "src/app.ts",
      "methods": ["GET"]
    },
    {
      "src": "/slack/events",
      "dest": "src/app.ts",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "src/app.ts"
    }
  ]
}
